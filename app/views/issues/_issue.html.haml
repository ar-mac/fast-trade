.list-group-item
  .row
    .col-md-1
      - if issue.active_for?(@current_user)
        = link_to t('links.issue.deactivate'), deactivate_issue_path(id: issue.id), method: :patch, class: "btn btn-default btn-xs"
    .col-md-4
      = link_to issue.offer.title, offer_path(issue.offer)
      %br
      - if sender?(issue)
        = link_to issue.reciever.name, issue.reciever
      - else
        = link_to issue.sender.name, issue.sender
    .col-md-7
      .issue-header
        = link_to t('links.issue.title'), issue_path(issue)
        - if new_in_issue?(issue)
          %span.badge= t('elements.issue.has_new_message')
          
      .content-showup
        = truncate(issue.messages.last.content, length: 160, separator: ' ')