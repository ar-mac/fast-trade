- breadcrumb :login

.row
  .col-md-6.col-md-offset-3
    .form
      %h3= t('elements..forms.new_session')
      = form_for(:session, url: sessions_path) do |f|
      
        .form-field
          = f.label t('activerecord.attributes.user.name')
          = f.text_field :name, class: 'form-control'
        .form-field
          = f.label t('activerecord.attributes.user.password')
          = f.password_field :password, class: 'form-control'
        .form-field
          = f.label :remember do
            = f.check_box :remember
            %span.checkbox-label= t('elements.remember_me')
        
        = f.submit t('links.user.login'), class: 'btn btn-default'
        = link_to t('links.cancel'), root_path, class: 'btn btn-danger pull-right'