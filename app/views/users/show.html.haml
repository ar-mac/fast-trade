.row
  .col-md-4
    %h2.custom-h2= t('elements.user_info')
    %ul.list-group
      %li.list-group-item
        %b= t('activerecord.attributes.user.name') + ':'
        = @user.name
      %li.list-group-item
        %b= t('activerecord.attributes.user.region')+ ':'
        = @user.region
    /- #admin_user_buttons function in user helper (buttons for edit and delete profile)
  .col-md-8
    %h2.custom-h2= t('elements.user_offers')
    /- #current_user_offer_nav(@user, (0..2)) function in user helper to show offers status navigation 
    .list-group
      /= render @offers
      /= will_paginate @offers