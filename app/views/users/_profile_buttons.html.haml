- if @current_user == @user
  .well
    .btn-group
      = link_to t('links.edit'), edit_user_path(@user), class: 'btn btn-primary'
- if !current_user.nil? && current_user.admin?
  .well
    %div
      %b= t('elements.admin.buttons')
    .btn-group
      = link_to t('links.edit'), edit_admin_user_path(@user), class: 'btn btn-warning'