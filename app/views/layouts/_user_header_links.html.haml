%ul.nav.navbar-nav.navbar-right
  - if inactive?
    %p.navbar-text#text-danger= t('activerecord.attributes.user.inactive')
  
  - if @current_user
  
    - if admin?
      
      %li.dropdown
        %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", |
        :href => "#", :role => "button"}  |
          = t('links.admin_options')
          %span.caret
        %ul.dropdown-menu{:role => "menu"}
          %li.dropdown-header{:role => "presentation"}= t('links.users')
          %li= link_to t('links.show'), admin_users_path
          %li.divider
          %li.dropdown-header{:role => "presentation"}= t('links.offers')
          %li= link_to t('links.show'), offers_path
          %li= link_to t('links.offer.status0'), offers_path(status: 0)
            
    
    
    %li.dropdown
      %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", |
      :href => "#", :role => "button"}  |
        = t('links.offer.own')
        %span.caret
      %ul.dropdown-menu{:role => "menu"}
        %li= link_to t('links.show'), offers_path
        %li.divider
        %li= link_to t('links.add'), new_offer_path
    %li.dropdown
      %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", |
      :href => "#", :role => "button"}  |
        = @current_user.name
        %span.caret
      %ul.dropdown-menu{:role => "menu"}
        %li= link_to t('links.show'), @current_user
        %li= link_to t('links.settings'), edit_user_path(@current_user)
        %li.divider
        %li= link_to t('links.user.log_out'), logout_path, method: :delete
    
  - else
  
    %li= link_to t('links.user.register'), new_user_path
    %li= link_to t('links.user.login'), login_path